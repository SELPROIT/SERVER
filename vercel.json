{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [ 
      {
        "src": "./(.*)",
        "dest": "index.js"
      },
      { "src": "/category", "dest": "/" },
      { "src": "/subcategory", "dest": "/" },
      { "src": "/product", "dest": "/" },
      { "src": "/allUsers", "dest": "/" },
      { "src": "/user/:name", "dest": "/" },
      { "src": "/bid", "dest": "/" },
      { "src": "/admins", "dest": "/" },
      { "src": "/allAuctions", "dest": "/" },
      { "src": "/invertAuction", "dest": "/" },
      { "src": "/auction", "dest": "/" },
      { "src": "/auction/:id", "dest": "/api/auction/:id" },
      { "src": "/invertAuction/:invertAuction_id", "dest": "/" },
      { "src": "/create/product", "dest": "/" },
      { "src": "/create/user", "dest": "/" },
      { "src": "/create/bid", "dest": "/" },
      { "src": "/create/auction", "dest": "/" },
      { "src": "/create/invertAuction", "dest": "/" },
      { "src": "/create/payment", "dest": "/" },
      { "src": "/create/webhook", "dest": "/" }
    ],
    "rewrites": [
      {
        "source": "/auction/:id",
        "destination": "/api/auction/:id"
      }
    ]
  }